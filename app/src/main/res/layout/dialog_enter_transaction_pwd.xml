<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="52dp"
    android:layout_marginStart="52dp"
    android:background="@drawable/shape_white_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="0dp">

    <com.dxs.stc.widget.VectorCompatTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_14"
        android:gravity="center"
        android:text="请输入交易密码"
        android:textColor="#333333"
        android:textSize="14sp"
        app:vectorRightCompat="@drawable/icon_close" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_line" />


    <com.dxs.stc.widget.PasswordEditText
        android:id="@+id/pet_pwd"
        android:layout_width="264dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@null"
        android:inputType="number"
        android:maxLength="6" />

    <TextView
        android:id="@+id/tv_incorrect_pwd_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="密码错误，请重新输入"
        android:textColor="@color/price_color"
        android:textSize="@dimen/sp_10"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="忘记交易密码?"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/sp_12" />


</LinearLayout>