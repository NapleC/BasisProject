<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_mall_list_bg"
    android:paddingTop="@dimen/dp_10"
    android:paddingStart="@dimen/dp_14"
    android:paddingEnd="@dimen/dp_14"
    android:paddingBottom="@dimen/dp_14">

    <com.dxs.stc.glideimageview.GlideImageView
        android:id="@+id/iv_notice_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/jewelry"
        android:scaleType="centerCrop"
        app:riv_corner_radius="6dp"/>

    <com.dxs.stc.widget.ImageTextView
        android:id="@+id/tv_notice_tip"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_notice_left"
        android:drawablePadding="@dimen/dp_4"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        app:drawable="@drawable/ic_smile"
        app:drawableHeight="@dimen/dp_10"
        app:drawableWidth="@dimen/dp_8"
        app:position="1" />

    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_notice_pic"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        tools:text="@string/auction_start_time"
        android:textColor="@color/color_63"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_notice_title"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        tools:text="@string/auction_start_time"
        android:textColor="@color/color_66"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>
