<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_status_bar_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/line_shadow"
        android:baselineAligned="true"
        android:clipChildren="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/title_home"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/selector_icon_home"/>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="@string/title_home"
                android:textColor="@color/selector_tab_text"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/title_mall"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/selector_icon_mall" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_mall"
                android:textColor="@color/selector_tab_text"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:background="@mipmap/nav_center_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/title_auction"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/selector_icon_auction" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_auction"
                android:textColor="@color/selector_tab_text"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/title_news"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/selector_icon_news" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_news"
                android:textColor="@color/selector_tab_text"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/title_person"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/selector_icon_mine" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_person"
                android:textColor="@color/selector_tab_text"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>