<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <!-- ToolBar样式 .-->
    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <!--修改toolbar的Title颜色.正确-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--修改toolbar的subtitle(小标题)颜色.正确-->
        <item name="subtitleTextColor">@color/textColorPrimary</item>
        <!--修改toolbar折叠图标颜色.这个也正确,用这个吧-->
        <item name="colorControlNormal">@color/textColorPrimary</item>
    </style>
</resources>
